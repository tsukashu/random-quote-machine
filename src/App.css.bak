#root {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

#quote-box {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  background: #555;
  padding: 1rem;
}

.quote {
  border: 3px solid red;

  display: flex;
  flex-direction: column;
  justify-content: space-evenly;

  width: 400px;
  height: 400px;

}
.btn {
  border: 3px solid #aaa;

  display: flex;
  justify-content: space-around;
}

#text {
  font-size: 1.5rem;
}
